<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diogo.appreceitas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Receitas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReceitasSalgadosActivity"
            android:label="Salgados">
            <meta-data
                android:name="android.support.PARENT.ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ReceitasDocesActivity"
            android:label="Doces">
            <meta-data
                android:name="android.support.PARENT.ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ReceitasBolosActivity"
            android:label="Bolos">
            <meta-data
                android:name="android.support.PARENT.ACTIVITY"
                android:value=".MainActivity" />
        </activity>


        <activity
            android:name=".ReceitasActivity"
            android:label="Receita" />

    </application>

</manifest>